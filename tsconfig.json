{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "declaration": true,
    "lib": [
      "ES2018",
      "DOM"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@plane2d/benchmark": [
        "packages/core/src"
      ],
      "@plane2d/controllers": [
        "packages/controllers/src"
      ],
      "@plane2d/core": [
        "packages/core/src"
      ],
      "@plane2d/lights": [
        "packages/lights/src"
      ],
      "@plane2d/particles": [
        "packages/particles/src"
      ],
      "@plane2d/testbed": [
        "packages/testbed/src"
      ],
    }
  },
